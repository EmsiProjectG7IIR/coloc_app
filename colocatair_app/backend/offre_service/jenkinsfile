pipeline {
    agent any

    stages {
        stage("Build & SonarQube Scanner") {
            steps {
                script {
                    withSonarQubeEnv('SonarCloud') {
                        // Navigate to the project directory
                        dir('colocatair_app/backend/offre_service') {
                            // Run Maven commands with sonar.organization property
                            bat 'mvn clean package sonar:sonar -Dsonar.organization=yahyamallouli'
                        }
                    }
                }
            }
        }

        stage('Create Docker Image') {
            steps {
                bat 'docker build -t yahya/pos .'
            }
        }

        stage('Run') {
            steps {
                script {
                    bat "docker run --name test-pos -d -p 8585:8282 yahya/pos"
                }
            }
        }

    }
}
